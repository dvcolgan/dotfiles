#alt + {_,shift + }Tab
#    bspc node -f {next,prev}

#alt + Tab
#	bspc desktop -f last
#alt + shift + Tab
#	bspc desktop -f prev

alt + {_,shift + }Tab
    bspc desktop -f {next.local,prev.local}

